{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Server",
            "type": "shell",
            "command": "gcc",
            "args": [
                "server.c",
                "auth.c",
                "-o",
                "server",
                "-lmysqlclient",
                "-I/usr/local/include",
                "-L/usr/local/lib"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Client",
            "type": "shell",
            "command": "gcc",
            "args": [
                "client.c",
                "-o",
                "client"
            ]
        }
    ]
}
